{
    "manifest_version": 2,
    "name": "Course ratings on UofT Timetable",
    "version": "0.1.0",
    "description": "Display predicted course ratings on the UofT Timetable",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "css": [
                "styles.css"
            ],
            "js": [
                "content.js"
            ],
            "matches": [
                "https://timetable.iit.artsci.utoronto.ca/*"
            ]
        }
    ],
    "web_accessible_resources": [
        "images/spinner.gif"
    ],
    "permissions": [
        "activeTab"
    ]
}